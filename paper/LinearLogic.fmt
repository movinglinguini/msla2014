% directives for linear logic connectives

%format  ~> = "\Rightarrow"
%format  ⊸  = "\multimap"
%format _⊸_ = "\_\!\multimap\!\_"

%format TypeIL = Type "^{IL}"
%format ⊢IL = ⊢ "_{IL}"
%format ⟧IL = ⟧ "^{IL}"

%format reifyIL = [_] "^{IL}"
%format x' = ×

%format ⟦X++Y⟧=⟦X⟧++⟦Y⟧ = ⟦X "\!\!\plus\!\!" Y⟧=⟦X⟧ "\!\!\plus\!\!" ⟦Y⟧